{
    "name": "dnunez24/craftcms-project",
    "description": "Craft CMS project starter",
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0",
        "ext-imagick": "*",
        "ext-mbstring": "*",
        "ext-mcrypt": "*",
        "ext-redis": "*",
        "craftcms/cms": "^2.6",
        "craftcms/plugin-installer": "^1.0.0"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "*",
        "squizlabs/php_codesniffer": "^2.8",
        "phpmd/phpmd": "^2.6"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/pixelandtonic/Twig"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pixelandtonic/guzzle3"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pixelandtonic/simplepie"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pixelandtonic/pel"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pixelandtonic/yii"
        }
    ],
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "src/vendor/craftcms/cms/src/"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "Dnunez24\\composer\\ScriptHandler::createDotEnvFile"
        ]
    },
    "config": {
        "bin-dir": "./bin",
        "vendor-dir": "./src/vendor"
    }
}
